<%= simple_form_for [:dashboard, @user] do |f| %>
  <%= f.input :email %>
  <%= f.select(:locale, I18n.available_locales.map { |l| [l, l] }, 
                                                prompt: t('.lang')) unless @user.new_record? %>
  <%= f.input :password, label: t('.pass') %>
  <%= f.input :password_confirmation, label: t('.rep_pass') %>
  <%= f.submit t('.submit') %>
<% end %>

