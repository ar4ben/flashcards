<h2>Cards</h2>
<% @cards.each do |card| %>
	<p>
		<span><%= card.original_text %> | </span>
		<span><%= card.translated_text %> | </span>
		<span><%= t('index.next_rev') %> <%= card.review_date.strftime("%d/%m/%Y") %></span>
		<div>
			<%= link_to "#{t('link.card')} | ", card_path(card) %>
			<%= link_to "#{ed_card} | ", edit_card_path(card) %>
			<%= link_to "#{del_card}" , card_path(card), method: :delete, 
															  data: { confirm: 'Are you sure?' } %>
		</div>
	</p>
<%end%>
